<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi EditText được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_900"/> <!-- Màu nền của EditText -->
            <stroke android:width="@dimen/_1sdp" android:color="@color/orange_700"/> <!-- Màu viền khi focus -->
            <corners android:radius="@dimen/_5sdp"/>
        </shape>
    </item>
    <!-- Trạng thái bình thường của EditText -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_900"/> <!-- Màu nền của EditText -->
            <stroke android:width="@dimen/_1sdp" android:color="@color/grey_400"/> <!-- Màu viền bình thường -->
            <corners android:radius="@dimen/_5sdp"/>
        </shape>
    </item>
</selector>