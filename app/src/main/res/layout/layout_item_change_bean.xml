<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="@dimen/_10sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:background="@drawable/round_corner"
    android:backgroundTint="@color/white_900"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_change_bean"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_gift_bean"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>
    <TextView
        android:id="@+id/title_change_bean"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="Mua 2 Tang 1 Tra Xanh Tay Bac"
        android:textSize="@dimen/_11sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/amountBean"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:paddingHorizontal="@dimen/_22sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="9"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/green_500"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:backgroundTint="@color/green_100" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEAN"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/black_900"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


</LinearLayout>