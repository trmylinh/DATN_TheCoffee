<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_900"
    tools:context=".store.view.StoreFragment">

    <ImageView
        android:src="@drawable/logo_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cửa hàng"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/black_900"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: 165 Cầu Giấy, Dịch Vọng, Hà Nội"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/black_900"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: 0862861396"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/black_900"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ hotline để đặt hàng hoặc được tư vấn ngay"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>