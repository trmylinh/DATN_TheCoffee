<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/custom_default_border"
    android:padding="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:id="@+id/itemBill"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:src="@drawable/icon_delivery_box"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/status_bill"
            android:text="Dang cho xac nhan"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/red_900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/id_order_bill"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Don hang HSYEWKJDJSJDURUEJSDSJD"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_900"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_bill"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="15:03 - 07/10/2023"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/grey_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price_bill"
            android:text="130.000d"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/grey_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>